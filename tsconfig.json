{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["es2020"],
    "outDir": "host",
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": "./",
    "noErrorTruncation": true,
    "paths": {
      "~": ["./index.js"],
      "@lancejpollard/script-tree": ["./form.d.ts"]
    },
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": true
  },
  "include": [".", "form.d.ts"],
  "exclude": ["node_modules", "host"]
}
